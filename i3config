set $ws6 6:production
set $ws7 7:games
set $ws8 8:misc
set $ws9 9:
set $ws10 10:

set $monitor_left DP-1
set $monitor_right DP-2

workspace $ws1 output $monitor_right
workspace $ws2 output $monitor_left
workspace $ws3 output $monitor_right
workspace $ws4 output $monitor_right
workspace $ws5 output $monitor_right
workspace $ws6 output $monitor_right
workspace $ws7 output $monitor_right
workspace $ws8 output $monitor_right
workspace $ws9 output $monitor_right
workspace $ws10 output $monitor_right

exec --no-startup-id i3-msg 'workspace 5:music; exec spotify'
exec --no-startup-id i3-msg 'workspace 4:comm; exec discord'
exec --no-startup-id i3-msg 'workspace 2:browser; exec brave-browser'
exec --no-startup-id i3-msg 'workspace 1:term; exec konsole'

